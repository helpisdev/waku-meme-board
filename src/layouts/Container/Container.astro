---
import { default as Body } from "@components/Body/Body.astro";
import { default as Head, HeadProps } from "@components/Head/Head.astro";

interface Props {
  title: string;
  lang?: string | undefined;
  headData?: HeadProps;
}

const { title, lang = "en", headData } = Astro.props as Props;
---

<!DOCTYPE html>
<html dir="ltr" lang={lang} class="" id="root">
  <Head
    twitter={headData?.twitter}
    facebook={headData?.facebook}
    meta={headData?.meta}
  />
  <Body title={title}>
    <slot />
  </Body>
</html>
